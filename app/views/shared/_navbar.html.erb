<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

  <!-- Clica na logo pra voltar pra home -->
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logoseupc.png" %>
  <% end %>

  <!-- Adicionar notebook -->
  <div class="container-login-plus">

    <% if current_user %>
      <% unless current_user.id == nil %>
        <% if policy(current_user).create? %>
          <%= link_to list_notebooks_path do%>
            <i class="fas fa-laptop", style='display: flex; justify-content: center; align-items: center; font-size: 22px; height:100%; padding-right: 25px;'></i>
          <% end %>
        <% end %>
        <% if policy(current_user).create? %>
          <%= link_to new_notebook_path do%>
            <i class="fas fa-plus-square", style='display: flex; justify-content: center; align-items: center; font-size: 32px; height:100%; padding-right: 25px;'></i>
          <% end %>
        <% end %>
      <% end %>
    <% end %>

    <!-- Login/logout -->
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <%= cl_image_tag current_user.photo.key, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false if current_user.photo.attached?%>
            <%= image_tag "avatar-default-copy.png", crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false unless current_user.photo.attached?%>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

</div>
