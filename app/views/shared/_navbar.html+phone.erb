<div class="navbar navbar-expand-sm navbar-light navbar-seupc-mobile">

  <!-- Clica na logo pra voltar pra home -->
  <%= link_to root_path, class: "navbar-brand-mobile" do %>
    <%= image_tag "logoseupc.png" %>
  <% end %>

  <div class="container-login-plus">

    

    <!-- Login/logout -->
    <div class="navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <%= cl_image_tag current_user.photo.key, crop: :fill, class: "mobile-avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false if current_user.photo.attached?%>
            <%= image_tag "avatar-default-copy.png", crop: :fill, class: "mobile-avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false unless current_user.photo.attached?%>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown" id="dropdown-menu-seupc">
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>

              <% if current_user && current_user.admin == true %>
                <%= link_to "Ranking", list_notebooks_path, class: "dropdown-item" %>
              <% end %>

            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>

  </div>

</div>
