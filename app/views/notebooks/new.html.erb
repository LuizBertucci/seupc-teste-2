<div class="form-background-edit col-12" >
  <div class="form-info-edit" >
    <h2>Editing notebook</h2>
    <%= simple_form_for @notebook do |f| %>

      <%= f.input :name %>
      <div class="form-row">
        <div class="form-group col-md-4">
          <%= f.input :asin, hint:'asin da amazon que garante que nÃ£o tenha notebook repetido' %>
        </div>

        <div class="form-group col-md-2">
          <%= f.input :processor, hint: 'i3 - i5 - i7' %>
        </div>
        <div class="form-group col-md-2">
          <%= f.input :brand %>
        </div>
        <div class="form-group col-md-2">
          <%= f.input :modelo %>
        </div>
        <div class="form-group col-md-2">
          <%= f.input :color %>
        </div>
        <div class="form-group col-md-2">
          <%= f.input :hd %>
        </div>
        <div class="form-group col-md-2">
          <%= f.input :ram %>
        </div>
        <div class="form-group col-md-2">
          <%= f.input :ssd %>
        </div>
        <div class="form-group col-md-2">
          <%= f.input :screen %>
        </div>
        <div class="form-group col-md-2">
          <%= f.input :guarantee %>
        </div>
        <div class="form-group col-md-2">
          <%= f.input :placa_video %>
        </div>

        <div class="form-group col-md-2">
          <%= f.input :amazon_price, hint:'colocar o valor no formato R$ 1.000,00' %>
        </div>
        <div class="form-group col-md-10">
          <%= f.input :link_amazon %>
        </div>

        <div class="form-group col-md-2">
          <%= f.input :magalu_price, hint:"colocar o valor no formato R$ 1.000,00" %>
        </div>
        <div class="form-group col-md-10">
          <%= f.input :link_magalu %>
        </div>

        <div class="form-group col-md-2">
          <%= f.input :submarino_price, hint:'colocar o valor no formato R$ 1.000,00' %>
        </div>
        <div class="form-group col-md-10">
          <%= f.input :link_submarino %>
        </div>

        <div class="form-group col-md-2">
          <%= f.input :americanas_price, hint:'colocar o valor no formato R$ 1.000,00' %>
        </div>
        <div class="form-group col-md-10">
          <%= f.input :link_americanas %>
        </div>

      </div>


      <%= f.input :photo, as: :file %>
      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
