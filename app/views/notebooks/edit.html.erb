<div class="form-background-edit col-12" >
  <div class="form-info-edit" >
    <h2>Creating notebook</h2>
    <%= simple_form_for @notebook do |f| %>

      <a href="<%= @notebook.link_amazon %>" target='_blank'>Ir a loja da Amazon</a>
      <%= f.input :name %>
      <div class="form-row">
        <div class="form-group col-md-4">
          <%= f.input :asin, hint:'asin da amazon que garante que nÃ£o tenha notebook repetido' %>
        </div>
        <div class="form-group col-md-4">
          <%= f.input :offer_price %>
        </div>
        <div class="form-group col-md-4">
          <%= f.input :processor, hint: 'i3 - i5 - i7' %>
        </div>
        <div class="form-group col-md-4">
          <%= f.input :brand %>
        </div>
        <div class="form-group col-md-4">
          <%= f.input :modelo %>
        </div>
        <div class="form-group col-md-4">
          <%= f.input :color %>
        </div>
        <div class="form-group col-md-4">
          <%= f.input :hd %>
        </div>
        <div class="form-group col-md-4">
          <%= f.input :ram %>
        </div>
        <div class="form-group col-md-4">
          <%= f.input :ssd %>
        </div>
        <div class="form-group col-md-4">
          <%= f.input :screen %>
        </div>
        <div class="form-group col-md-4">
          <%= f.input :guarantee %>
        </div>
        <div class="form-group col-md-4">
          <%= f.input :placa_video %>
        </div>
        <div class="form-group col-md-4">
          <%= f.input :link_magalu%>
        </div>
        <div class="form-group col-md-4">
          <%= f.input :link_americanas%>
        </div>
        <div class="form-group col-md-4">
          <%= f.input :link_submarino%>
        </div>
      </div>


      <%= f.input :photo, as: :file %>
      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
