<div class="form-background-edit col-12" >
  <div class="form-info-edit" >
    <h2>Editing notebook</h2>
    <%= simple_form_for @notebook do |f| %>

      <%= f.input :name %>
      <div class="form-row">
        <div class="form-group col-md-2">
          <%= f.input :asin, hint:'asin da amazon que garante que não tenha notebook repetido' %>
        </div>

        <div class="form-group col-md-2">
          <%= f.input :brand %>
        </div>
        <div class="form-group col-md-2">
          <%= f.input :modelo %>
        </div>
        <div class="form-group col-md-2">
          <%= f.input :processor, hint: 'i3 - i5 - i7' %>
        </div>
        <div class="form-group col-md-1">
          <%= f.input :ram %>
        </div>
        <div class="form-group col-md-1">
          <%= f.input :hd %>
        </div>
        <div class="form-group col-md-1">
          <%= f.input :weight, hint: 'Não precisa colocar Kg' %>
        </div>
        <div class="form-group col-md-1">
          <%= f.input :color %>
        </div>
        <div class="form-group col-md-2">
          <%= f.input :ssd %>
        </div>

        <div class="form-group col-md-2">
          <%= f.input :screen_quality, hint: 'Full HD?' %>
        </div>
        <div class="form-group col-md-2">
          <%= f.input :screen_size, hint: '13 - 14 - 15.6' %>
        </div>
        <div class="form-group col-md-2">
          <%= f.input :screen_width, hint: 'Ultrafino?' %>
        </div>

        <div class="form-group col-md-4">
          <%= f.input :placa_video, hint: 'Integrado / ...' %>
        </div>

        <!-- Lojas -->

        <a href="<%= @notebook.link_amazon %>" class='form-group col-md-2' target='_blank' id='amazon' >
          <p class='btn btn-primary'> abra o link da amazon </p>
        </a>
        <div class="form-group col-md-2">
          <%= f.input :amazon_price, hint:'colocar o valor no formato R$ 1.000,00' %>
        </div>
        <div class="form-group col-md-8">
          <%= f.input :link_amazon, hint:'Amazon' %>
        </div>

        <div class="form-group col-md-2">
          <%= f.input :magalu_price, hint:"colocar o valor no formato R$ 1.000,00" %>
        </div>
        <div class="form-group col-md-10">
          <%= f.input :link_magalu, hint:'Magalu' %>
        </div>

        <div class="form-group col-md-2">
          <%= f.input :americanas_price, hint:'colocar o valor no formato R$ 1.000,00' %>
        </div>
        <div class="form-group col-md-10">
          <%= f.input :link_americanas, hint:'Americanas' %>
        </div>

        <div class="form-group col-md-2">
          <%= f.input :submarino_price, hint:'colocar o valor no formato R$ 1.000,00' %>
        </div>
        <div class="form-group col-md-10">
          <%= f.input :link_submarino, hint:'Submarino' %>
        </div>

      </div>


      <%= f.input :photo, as: :file %>
      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
